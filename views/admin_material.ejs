<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Material</title>
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="container">
        <div class="logout">
            <a class="logout_text" href="/admin_dashboard">Back</a>
        </div>
        <br><br>
        <h1><%= subject %></h1><br>
      
        <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="hidden" name="subject" value="sss">
            <label for="file">Select File:</label>
            <input type="file" name="file" id="file" required>
            <button type="submit" name="submit">Upload</button>
        </form>
        <h1>FILES</h1>

        <table class='filetable'>
           <%x.forEach((y)=>{%>
				<tr>
			    <td class='filetabletd'>
				    <%=y.name%>
				</td>
                <td class='filetabletd'>
                    <form action="/open_file/<%=y.name%>" method="post">
                        <button type="submit" name="submit">Open</button>
                    </form>
                </td>
                <td class='filetabletd'>
                <a class='meterial_text' href='' download> Download File </a>
                </td>
                <td class='filetabletd'>
                    <form action="/delete/<%=y.name%>?_method=DELETE" method="post">
                        <button type="submit" name="submit">delete</button>
                    </form>
                </td>
                </tr>
            <%})%>
        </table>

  
    </div>
</body>
</html>


